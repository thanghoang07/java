<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/imght"
    tools:context="com.example.timsonhonhat.TimMinActivity" >

    <TextView
        android:id="@+id/textSTNhat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nhập sô thứ nhất: " />

    <TextView
        android:id="@+id/textSTHai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/eTSTNhat"
        android:layout_below="@+id/eTSTNhat"
        android:layout_marginTop="15dp"
        android:text="Nhập số thứ hai: " />

    <EditText
        android:id="@+id/eTSTNhat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textSTNhat"
        android:layout_below="@+id/textSTNhat"
        android:ems="10" >

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/btnTinh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/eTSTHai"
        android:layout_below="@+id/eTSTHai"
        android:layout_marginTop="17dp"
        android:text="Tìm Min" />

    <EditText
        android:id="@+id/eTSTHai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textSTHai"
        android:layout_below="@+id/textSTHai"
        android:layout_marginTop="16dp"
        android:ems="10" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnTinh"
        android:layout_below="@+id/btnTinh"
        android:layout_marginTop="26dp"
        android:text="Kết quả: " />

</RelativeLayout>
